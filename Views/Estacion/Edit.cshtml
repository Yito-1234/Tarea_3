@model TrenCr.Models.Estacion

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Registre su compra</h1>



<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="IdEstacion" />
            <div class="form-group">
                <label asp-for="IdRuta" class="control-label">Ruta</label>
                <select asp-for="IdRuta" class="form-control" asp-items="ViewBag.IdRuta"></select>
                <span asp-validation-for="IdRuta" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NomEstacion" class="control-label">Estación</label>
                <input asp-for="NomEstacion" class="form-control" />
                <span asp-validation-for="NomEstacion" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Horario" class="control-label">Horario</label>
                <input asp-for="Horario" id="fec" class="form-control" />
                <span asp-validation-for="Horario" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EspaciosDisponibles" class="control-label">Espacios Disponibles</label>
                <input asp-for="EspaciosDisponibles" id="espacios" class="form-control" />
                <span asp-validation-for="EspaciosDisponibles" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CantBoletos" class="control-label">Cantidad Boletos</label>
                <input asp-for="CantBoletos" id="comprab" class="form-control" />
                <span asp-validation-for="CantBoletos" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input id="Print" onclick="validacion()" type="submit" value="Comprar" class="btn btn-primary" />
            </div>
     
        </form>
    </div>
</div>






<script src="~/js/jquery/jquery.min.js"></script>



